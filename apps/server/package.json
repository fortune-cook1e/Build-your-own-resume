{
  "name": "server",
  "description": "resume-generator-server",
  "author": "fortune_cookie",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nest start --watch",
    "tsc": "tsc",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prisma:seed": "npx prisma db seed",
    "prisma:generate": "pnpm exec prisma generate",
    "prisma:deploy": "pnpm exec prisma migrate deploy",
    "prisma:migrate:dev": "pnpm exec prisma migrate dev",
    "prisma:studio": "pnpm exec prisma studio",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.11.2",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.3",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.3",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/terminus": "^10.2.3",
    "@paralleldrive/cuid2": "^2.2.2",
    "@pdf-lib/fontkit": "^1.1.1",
    "@prisma/client": "^5.10.2",
    "@songkeys/nestjs-redis": "^10.0.0",
    "@songkeys/nestjs-redis-health": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "deepmerge": "^4.3.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "nestjs-prisma": "^0.22.0",
    "nestjs-zod": "^3.0.0",
    "nodemailer": "^6.9.11",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pdf-lib": "^1.17.1",
    "prisma": "^5.10.2",
    "puppeteer": "^22.7.1",
    "puppeteer-core": "^22.7.1",
    "qiniu": "^7.11.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "shared": "workspace:^"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^2.0.16",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^@/server/(.*)$": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
